<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../components/head.ejs'); %>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/todo" method="post">

                <strong>Title</strong>
                <div class="input-group mb-3">
                    <input type="text" name="title" id="title" class="form-control" aria-label="" placeholder="Title">
                </div>

                <strong>Description</strong>
                <div class="input-group mb-3">
                    <input type="text" name="desc" id="desc" class="form-control" aria-label=""
                        placeholder="Description">
                </div>

                <strong>Status</strong>
                <div class="input-group mb-3">
                    <select class="form-select" name="status" id="status" aria-label="">
                        <option value="">Status</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <!-- <a href="{{ route('home') }}" class="btn btn-secondary">Kembali</a> -->

            </form>
        </div>
    </div>
</body>

</html>