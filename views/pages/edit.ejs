<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../components/head.ejs'); %>
        <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/todos/update/<%= data.id %> " method="post">

                <strong>Title</strong>
                <div class="input-group mb-3">
                    <input type="text" name="title" id="title" class="form-control" aria-label="" placeholder="Title"
                        value="<%= data.title %> ">
                </div>

                <strong>Description</strong>
                <div class="input-group mb-3">
                    <input type="text" name="desc" id="desc" class="form-control" aria-label=""
                        placeholder="Description" value="<%= data.desc %> ">
                </div>

                <strong>Status</strong>
                <div class="input-group mb-3">
                    <select class="form-select" name="status" id="status" aria-label="">
                        <option value="true" <%=data.status==true ? 'selected' : '' %> >True</option>
                        <option value="false" <%=data.status==false ? 'selected' : '' %> >False</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" id="update-button">Update</button>
                <a href="/todos" class="btn btn-secondary">Back</a>

            </form>
        </div>
    </div>
</body>

</html>